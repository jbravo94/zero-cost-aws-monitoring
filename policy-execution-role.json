        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeStream",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams"
            ],
            "Resource": "arn:aws:dynamodb:eu-central-1:367906864559:table/generic-monitoring/stream/2025-06-11T19:16:22.360"
        }
    ]
