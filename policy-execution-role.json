{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:eu-central-1:367906864559:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:eu-central-1:367906864559:log-group:/aws/lambda/Generic-Mirth-Alert:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": "sns:Publish",
